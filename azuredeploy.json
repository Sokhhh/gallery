{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerGroupName": {
      "type": "string",
      "defaultValue": "multi-container-group",
      "metadata": {
        "description": "The name of the container group."
      }
    },
    "acrUsername": {
      "type": "string",
      "metadata": {
        "description": "The username for Azure Container Registry."
      }
    },
    "acrPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The password for Azure Container Registry."
      }
    }
  },
  "variables": {
    "appContainerName": "app",
    "appImage": "skhgallery.azurecr.io/gallery-app:v1",
    "dbContainerName": "db",
    "dbImage": "skhgallery.azurecr.io/postgres:v1"
  },
  "resources": [
    {
      "name": "[parameters('containerGroupName')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2019-12-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "containers": [
          {
            "name": "[variables('appContainerName')]",
            "properties": {
              "image": "[variables('appImage')]",
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGb": 1.5
                }
              },
              "environmentVariables": [
                {
                  "name": "JWT_SECRET",
                  "value": "your_jwt_secret_key"
                },
                {
                  "name": "JWT_EXPIRATION",
                  "value": "1h"
                },
                {
                  "name": "DATABASE_URL",
                  "value": "postgres://user:password@postgres:5432/db"
                }
              ],
              "ports": [
                {
                  "port": 5000
                }
              ]
            }
          },
          {
            "name": "[variables('dbContainerName')]",
            "properties": {
              "image": "[variables('dbImage')]",
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGb": 1.5
                }
              },
              "environmentVariables": [
                {
                  "name": "POSTGRES_USER",
                  "value": "user"
                },
                {
                  "name": "POSTGRES_PASSWORD",
                  "value": "password"
                },
                {
                  "name": "POSTGRES_DB",
                  "value": "db"
                }
              ],
              "ports": [
                {
                  "port": 5432
                }
              ]
            }
          }
        ],
        "osType": "Linux",
        "restartPolicy": "Always",
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "protocol": "tcp",
              "port": 5000
            }
          ]
        },
        "imageRegistryCredentials": [
          {
            "server": "skhgallery.azurecr.io",
            "username": "[parameters('acrUsername')]",
            "password": "[parameters('acrPassword')]"
          }
        ]
      }
    }
  ],
  "outputs": {
    "containerIPv4Address": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups/', parameters('containerGroupName'))).ipAddress.ip]"
    }
  }
}
